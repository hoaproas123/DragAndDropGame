<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="392dp"
        android:layout_height="726dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="607dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="444dp"
                android:background="#EFCF6E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="380dp"
                        android:layout_height="125dp"
                        android:layout_margin="30px"
                        android:layout_weight="1"
                        android:background="#E191A3" />


                </LinearLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/editText_timeCountDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/radioGroup_mode"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_easy"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Easy" />

                <RadioButton
                    android:id="@+id/radioButton_medium"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/radioButton_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hard" />

                <RadioButton
                    android:id="@+id/radioButton_impossible"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Impossible" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="100dp"
            android:layout_below="@+id/linearLayout"
            android:layout_height="wrap_content"
            android:text="Add" />

        <ImageView
            android:id="@+id/imageViewRe"
            android:layout_width="70dp"
            android:layout_height="49dp"
            android:layout_toRightOf="@+id/buttonAdd"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/imageViewRe"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="1"
            app:srcCompat="@drawable/leesin_skin01"/>

        <ImageView
            android:id="@+id/imageViewZoomIn"
            android:layout_width="70dp"
            android:layout_height="49dp"
            android:layout_toRightOf="@+id/imageViewMain"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_zoom_in_24" />

        <ImageView
            android:id="@+id/imageViewZoomOut"
            android:layout_width="70dp"
            android:layout_height="49dp"
            android:layout_toRightOf="@+id/imageViewZoomIn"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_zoom_out_24" />

        <ImageView
            android:id="@+id/imageViewThief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/thief" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>